    "@mailchimp/mailchimp_transactional": "^1.0.31",
    "colors": "^1.4.0",
    "cors": "^2.8.5",
    "cron": "^1.8.2",
    "cross-env": "^7.0.3",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "express-force-https": "^1.0.0",
    "express-mongo-sanitize": "^2.1.0",
    "express-rate-limit": "^5.3.0",
    "flutterwave-node-v3": "^1.0.8",
    "helmet": "^4.6.0",
    "hpp": "^0.2.3",
    "md5": "^2.3.0",
